---
// The Astro frontmatter script only contains Javascript.
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About me"

const identity = {
	firstName: "Federico",
	country: "Italia",
	occupation: "AI Developer",
	hobbies: ["fighting", "shamaning", "talking"],
}

const skills = ["fighting", "coding", "writing", "fucking",]
---
<BaseLayout pageTitle={pageTitle}>
	<p>Welcome to my kingdom!</p>
	<p>I am {identity.firstName} from {identity.country}. 
		I currently work as {identity.occupation} and I am 
		passionate about web3 (Rust fanboy :)) ).</p>
	{identity.hobbies.length > 2 && 
	<li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
	}
	<p>Something about my skills...</p>
	<ul>
		{skills.map((skill) => <li>{skill}</li>)}
	</ul>
</BaseLayout>